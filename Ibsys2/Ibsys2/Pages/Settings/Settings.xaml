<Window x:Name="SettingsPage" x:Class="Ibsys2.Pages.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Settings"  ResizeMode="NoResize" Height="209.556" Width="364.505" Icon="Translate.png">
  <Grid>
    <Grid.Background>
      <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
        <GradientStop Color="White" Offset="0.768"/>
        <GradientStop Color="#FF00489D" Offset="1"/>
        <GradientStop Color="#FF99B6D8" Offset="0.887"/>
        <GradientStop Color="#FFCEDCEC" Offset="0.84"/>
      </LinearGradientBrush>
    </Grid.Background>
    <ComboBox x:Name="Languageselector" HorizontalAlignment="Left" Margin="94,31,0,0" VerticalAlignment="Top" Width="135" SelectionChanged="Languageselector_SelectionChanged"/>
    <Label x:Name="LanguageLabel" Content="Sprache:" HorizontalAlignment="Left" Margin="19,27,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.418,0.967"/>
    <Button x:Name="SaveButton" Content="Speichern" HorizontalAlignment="Left" Margin="260,31,0,0" VerticalAlignment="Top" Width="75" Click="SaveButton_Click" Height="22"/>

  </Grid>
</Window>
